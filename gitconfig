[core]
	editor = vim
[merge]
	tool = vimdiff
	ff = false
[diff]
	wordRegex = .
	tool = vimdiff
	renames = copy
[color "diff"]
	commit = magenta
	whitespace = red reverse
[difftool]
	prompt = false
[color]
	status = auto
	diff = auto
	branch = auto
[push]
	default = upstream
[branch]
	autosetuprebase = always
[apply]
	whitespace = warn
[alias]
	f = commit --amend --reuse-message=HEAD
	b = "!f() { git checkout master@{u} -b $1 && git pull --rebase;}; f"
	r = "!f() { git rebase -i $(git merge-base HEAD @{u});}; f"
[tig]
	tab-size = 4
