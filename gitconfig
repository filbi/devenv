[core]
	editor = vim
	pager = delta --light --max-line-distance 0.8
[interactive]
	diffFilter = delta --color-only
[merge]
	tool = vimdiff
	ff = false
[diff]
	wordRegex = .
	tool = vimdiff
	renames = copy
	colorMoved = default
	algorithm = histogram
[difftool]
	prompt = false
[color]
	status = auto
	diff = auto
	branch = auto
[push]
	default = upstream
[branch]
	autosetuprebase = always
	sort = -authordate
[apply]
	whitespace = warn
[alias]
	f = commit --amend --no-edit
	b = "!f() { git checkout master@{u} -b $1 && git pull --rebase;}; f"
	r = "!f() { git rebase -i $(git merge-base HEAD @{u});}; f"
[submodule]
	fetchJobs = 0
[transfer]
	fsckObjects = true
[fetch]
	prune = true
	parallel = 0
[commit]
	verbose = true
[init]
	defaultBranch = master
[color "diff-highlight"]
	oldHighlight = red bold 52
	newHighlight = green bold 22
[tig]
	tab-size = 4
	diff-highlight = /usr/share/git/diff-highlight/diff-highlight
	show-untracked = no
	refresh-mode = periodic
	refresh-interval = 1
